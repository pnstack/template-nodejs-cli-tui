{
  "name": "@acme/cli",
  "version": "0.2.0",
  "type": "module",
  "bin": {
    "acme": "dist/index.js"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "dev:run": "tsup --watch --onSuccess \"node dist/index.js\"",
    "clean": "rimraf dist || rm -rf dist",
    "lint": "echo \"(cli) no lint rules configured\"",
    "format": "prettier -w \"src/**/*.{ts,tsx}\"",
    "test": "vitest run"
  },
  "dependencies": {
    "@acme/core": "workspace:*",
    "@acme/tui": "workspace:*",
    "@lydell/node-pty": "1.2.0-beta.3",
    "commander": "^14.0.3",
    "dotenv": "^17.3.1"
  },
  "devDependencies": {
    "tsup": "^8.3.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.18"
  }
}
